<div class="flex flex-col w-full items-center md:w-2/3"> 
  <div class="flex flex-row w-full justify-center items-end">
    <h2 class="font-bold sm:text-8xl text-6xl font-righteous text-right">Courses</h2>
  </div>

  <div class="flex flex-col w-full gap-4 mt-4 items-center">
    <% @list.each do |element| %>
      <%= link_to element do %>
        <div class="flex justify-between items-center px-6 glass-box w-[80vw] md:w-[70vw] lg:w-[60vw]">
          <div class="font-bold font-righteous text-lg max-w-[50%]"><%= element.name %></div>
          <div class="font-raleway max-w-[35%]"><%= element.city %></div>
        </div>
      <% end %>
    <% end %>
  </div>
   
  <%= link_to 'New course', new_course_path, class: "btn-green mt-4 w-full" %>
</div>