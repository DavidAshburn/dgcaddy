<div data-controller="scorecard" class="flex flex-col justify-between h-[82vh]">


  <div class="flex justify-evenly font-righteous text-4xl -mt-2">
    <div class="flex flex-col w-1/3 items-center">
      <div class="text-xl text-slate-600">Par</div>
      <div data-scorecard-target="holePar"></div>
    </div>
    <div class="flex flex-col w-1/3 items-center">
      <div class="text-xl text-slate-600">Hole</div>
      <div data-scorecard-target="holeNumber"></div>
    </div>
    <div class="flex flex-col w-1/3 items-center">
      <div class="text-xl text-slate-600">Score</div>
      <div data-scorecard-target="holeScore"></div>
    </div>
  </div>

  <div class="flex flex-col w-full mt-10 text-xl text-slate-800">
    
    <div class="flex flex-col justify-evenly items-center bg-clip-padding backdrop-filter backdrop-blur-xl bg-gradient-to-b from-slate-400/50 to-slate-600/50 rounded-lg border-t border-l border-gray-200 inset-shadow">

      <div class=" flex justify-evenly align-center w-full rounded-lg border-b border-slate-200 inset-shadow">
        <% (1..9).each do |x|%>
          <div class="font-bold font-righteous w-[11.11%] text-center p-2"><%= x %></div>
        <% end %>
      </div>
      <div class=" flex justify-evenly align-center w-full rounded-lg border-b-2 border-slate-600/50">
        <% @pars.each_with_index do |element, index| %>
          <% if index < 9 %>
            <div class="font-raleway text-slate-700 w-[11.11%] text-center pb-2 pt-1">
              <%= element %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class=" flex justify-evenly align-center w-full rounded-lg border-b border-slate-100/20">
        <% (1..9).each do |x|%>
          <div class="font-bold font-righteous w-[11.11%] text-center text-2xl p-1" data-scorecard-target="cardHole">0</div>
        <% end %>
      </div>

    </div>

    <% if @length == '18' %>
      <div class="flex flex-col justify-evenly items-center bg-clip-padding backdrop-filter backdrop-blur-xl bg-gradient-to-b from-slate-400/40 to-slate-600/40 rounded-lg border-t border-l border-gray-200 mt-4 inset-shadow">

      <div class=" flex justify-evenly align-center w-full rounded-lg border-b border-slate-200 inset-shadow">
        <% (10..18).each do |x|%>
          <div class="font-bold font-righteous w-[11.11%] text-center p-2"><%= x %></div>
        <% end %>
      </div>
      <div class=" flex justify-evenly align-center w-full rounded-lg border-b-2 border-slate-600/50">
        <% @pars.each_with_index do |element, index| %>
          <% if index > 8 %>
            <div class="font-raleway text-slate-700 w-[11.11%] text-center pb-2 pt-1">
              <%= element %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class=" flex justify-evenly align-center w-full rounded-lg border-b border-slate-100/20">
        <% (1..9).each do |x|%>
          <div class="font-bold font-righteous w-[11.11%] text-center text-2xl p-1" data-scorecard-target="cardHole">0</div>
        <% end %>
      </div>
    </div>
    <% end %>    
  </div>
  
  <div class="flex justify-center">
    <div class="flex flex-col justify-center items-center text-4xl text-white text-center h-80 w-11/12 bg-clip-padding backdrop-filter backdrop-blur-xl bg-gradient-to-b from-slate-400/40 to-slate-600/40 rounded-full border-t border-l border-gray-200 inset-shadow">


      <div class="flex justify-evenly align-center gap-12">
        <button class="min-h-[3rem] min-w-[3rem] my-6 border-2 border-slate-200 rounded-full pb-1" data-action="scorecard#undoShot">-</button>
        <button class="min-h-[3rem] min-w-[3rem] my-6 border-2 border-slate-200 rounded-full pb-1" data-action="scorecard#addShot">+</button>
      </div>

      <div class="flex justify-center gap-2 w-11/12 bg-clip-padding backdrop-filter backdrop-blur-xl bg-gradient-to-b from-slate-400/20 to-zinc-600/20 rounded-full border-t border-l border-gray-200 inset-shadow h-40" data-scorecard-target="shotIcons"></div>

      <div class="flex justify-evenly align-center gap-12">
        <button class="min-h-[3rem] min-w-[3rem] my-6 border-2 border-slate-200 rounded-full pb-1 pr-1" data-action="scorecard#lastHole"><</button>
        <button class="min-h-[3rem] min-w-[3rem] my-6 border-2 border-slate-200 rounded-full pb-1 pl-1" data-action="scorecard#nextHole">></button>
      </div>


    </div>
  </div>

</div>