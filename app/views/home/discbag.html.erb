<div data-controller="discbag" class="flex flex-col w-full items-center">
  <div class="flex flex-col items-center"> 
    <div class="flex flex-row w-full justify-center">
      <h1 class="font-bold sm:text-8xl text-6xl font-righteous text-zinc-800">Discbag</h1>
    </div>
  </div>

  <div class="flex flex-col w-full gap-4 mt-4">
    <% @list.each do |element| %>
      <div class="flex align-center justify-center glass-box">
        <div class="font-bold font-righteous text-lg text-center w-5/12"><%= element.maker %></div>
        <div class="font-raleway text-center w-5/12"><%= link_to "#{element.model}", element %></div>
      </div>
    <% end %>
  </div>

  <div class="flex justify-start glass-box">
    <input type="text" id="findmaker" data-discbag-target="findmaker" class="rounded-md font-righteous text-lg">
    <input type="text" id="findmodel" data-discbag-target="findmodel" class="rounded-md font-righteous text-lg">
  </div>

  <div class="flex flex-col glass-box w-full">
    <!--
     turbo frame for discs, based on the filter applied
     default to empty
    -->
    <turbo-frame id="disclist">

    </turbo-frame>
  </div>

  <div class="flex flex-col glass-box w-full">
    <!--
     turbo frame for discbag, 
     populated by current_user.disckeys
     updated whenever we add a disc to the bag
    -->
    <turbo-frame id="discbag">

    </turbo-frame>
  </div>

  <div class="flex flex-col glass-box w-full">
    <!--
     turbo frame for add Disc
     Inline edit Maker and Model then add to Discbag
     this might need to be a turbo_stream since I want to update this partial as well as discbag
    -->
    <turbo-frame id="discadd">
      
    </turbo-frame>
  </div>
</div>