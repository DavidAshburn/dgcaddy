<div class="flex flex-col items-center"> 
  <div class="flex flex-row mt-10 w-full justify-center items-end">
    <h2 class="font-bold sm:text-8xl text-6xl font-righteous">Edit User</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="flex flex-col items-center">
      <div class="buck-field">
        <%= f.email_field :email, autofocus: true, placeholder: "e-mail", class:"rounded-lg font-righteous text-lg mt-10 mb-8" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="buck-field">
        <%= f.password_field :password, placeholder: "new-password", class:"rounded-lg font-righteous text-lg" %>
          
      </div>

      <div class="buck-field">

        <%= f.password_field :password_confirmation, placeholder: "repeat-password", class:"rounded-lg font-righteous text-lg" %>
        <br />
          <em class="font-righteous ml-5 text-zinc-700 text-xl">( <%= @minimum_password_length %> characters minimum )</em>
      </div>

      <div class="buck-field">
        <%= f.password_field :current_password, placeholder: "current-password", class:"rounded-lg font-righteous text-lg" %>
      </div>

      <div class="actions md:mr-20">
        <%= f.submit "Update", class:"btn-green mt-4" %>
      </div>
    </div>
  <% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn-yellow mt-2" %>
<%= link_to "Back", :back, class:'btn-yellow mt-2' %>
