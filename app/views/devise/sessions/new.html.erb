<div class="flex flex-col items-center"> 
  <div class="flex flex-row mt-10 w-full justify-center items-end">
    <h2 class="font-bold sm:text-8xl text-6xl font-righteous">Log In</h2>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="buck-field">
        <%= f.email_field :email, autofocus: true, placeholder: "email", class:"rounded-lg font-righteous text-lg mt-10" %>
      </div>

      <div class="buck-field">
        <%= f.password_field :password, placeholder: "password", class:"rounded-lg font-righteous text-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="buck-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions btn-green mt-4 md:mr-20">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

     <div class="flex w-4/5 absolute bottom-10 justify-center">
      <%= render "devise/shared/links" %>
    </div>
</div>
