<%= turbo_frame_tag "new_disckey", target: "_top" do %>
	<%= form_with(model: @disckey, data: {controller: "reset", action: "turbo:submit-end->reset#remove"}) do |form| %>
		<%= form.hidden_field :pointer, value: params[:pointer] %>
		<%= form.hidden_field :user_id, value:current_user.id %>
		<%= form.submit "Add", class: "btn-yellow" %>
	<% end %>
<% end %>